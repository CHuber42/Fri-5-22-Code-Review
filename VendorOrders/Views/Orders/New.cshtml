@using VendorOrders.Models

<h1>New Order for this Vendor</h1>

<form action="/vendors/@Model.Id/orders/" method="post">
  <label for="title">Title of Order</label>
  <input type="text" name="title" id="title" placeholder="Order Title"><br>
  <label for="description">Order Description</label>
  <input type="text" name="description" id="description" placeholder="Order Description"><br>
  <label for="price">Order Price</label>
  <input type="number" name="price" id="price" placeholder="Order Price" min="0" step="0.01"><br>
  <label for="orderdate">Order Date</label>
  <input type="datetime-local" name="orderdate" id="orderdate" placeholder="date"><br>
  <input id="Id" name="Id" type="hidden" value="@Model.Id">

  <button type="submit">Add Order</button>
</form>